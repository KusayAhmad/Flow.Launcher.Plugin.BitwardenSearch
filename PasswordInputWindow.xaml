<Window x:Class="Flow.Launcher.Plugin.BitwardenSearch.PasswordInputWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Enter Master Password" Height="150" Width="300" WindowStartupLocation="CenterScreen">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Label Content="Enter your master password:" Grid.Row="0"/>
        <PasswordBox x:Name="PasswordBox" Grid.Row="1" Margin="0,5,0,5"/>
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Content="Confirm" Click="ConfirmButton_Click" Width="70" Margin="0,0,5,0"/>
            <Button Content="Cancel" Click="CancelButton_Click" Width="70"/>
        </StackPanel>
    </Grid>
</Window>